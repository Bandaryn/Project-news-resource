<link href="~/Content/rating/rating.css" media="all" rel="stylesheet" type="text/css" />
@model IEnumerable<FinalTest.Domain.Contracts.ViewModels.PostViewModel>

@{
    ViewBag.Title = Resources.Resource.SearchResult;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.TItle</h2>

<div class="row">
    <div class="col-md-10">
        <input type="search" class="form-control" placeholder="@Resources.Resource.Filter">
    </div>

</div>

<table class="table">
    <thead>
        <tr>

            <th>@Resources.Resource.Title</th>

            <th>@Resources.Resource.Description</th>

            <th>@Resources.Resource.Author</th>

            <th>@Resources.Resource.Section</th>

            <th data-tsort-type="date">@Resources.Resource.Created</th>

            <th>@Resources.Resource.Rating</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>


                <td>
                    @Html.ActionLink(item.AuthorName, "Display", "Profile", new { id = item.AuthorId }, null)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SectionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    <input class="rating" min=1 max=5 step=1 data-size="xs" readonly="true" value="@item.Rating">
                </td>
                <td>

                    @Html.ActionLink(Resources.Resource.Read, "Display", "News", new { id = item.Id }, null)

                </td>
            </tr>
        }
    </tbody>


</table>

@section scripts
    {
    <script src="~/Scripts/tablefilter.js"></script>
    <script>
        $('table').tableFilter();
        $('table').tableFilter({

            // input field to filter table rows
            'input': 'input[type=search]',

            // trigger events and elements
            'trigger': {

                "event": "keyup",
                'element': undefined
            },

            // case sensitive
            'caseSensitive': false,

            // Timeout for keyboard events (keyup, keypress ...)
            'timeout': -1,

            // enable table sort
            'sort': false,

            // not found element
            // e.g. notFoundElement : ".not-found"
            'notFoundElement': null,

            // callback
            'callback': function () { }

        });
    </script>
    <script src="~/Scripts/rating/star-rating.min.js" type="text/javascript"></script>
}