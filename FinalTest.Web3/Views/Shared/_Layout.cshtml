<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@


    @if (Request.Cookies["theme"] == null || Request.Cookies["theme"].Value == "light")
    {
        @Styles.Render("~/css/bootstrap-l.css")
        @Scripts.Render("~/css/starter-template2.css")
    }
    else
    {
        if (Request.Cookies["theme"].Value == "dark")
        {
            @Styles.Render("~/css/bootstrap.css")
            @Scripts.Render("~/css/starter-template.css")
        }
        else
        {
            @Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/modernizr")
        }

    }


</head>
            <body>
                <div class="navbar navbar-inverse ">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink(Resources.Resource.Itnews, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">

                                <li></li>
                                <li>
                                    @if (User.IsInRole("admin"))
                                    {
                                        @Html.ActionLink(Resources.Resource.Godmode, "GodMode", "Admin")}
                                </li>


                            </ul>
                            <div class="navbar-form navbar-right">
                                @using (Html.BeginForm("ChangeTheme", "Home"))
                                {

                                    <div class="btn-group" role="group">
                                        <button name="theme" type="submit" class="btn btn-default btn-sm" value="light">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </button>
                                        <button name="theme" type="submit" class="btn btn-default btn-sm" value="dark">
                                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                                        </button>

                                    </div>
                                }
                            </div>
                            <div class="navbar-form navbar-right">
                                @using (Html.BeginForm("ChangeCulture", "Home"))
                                {

                                    <div class="btn-group" role="group">
                                        <button name="lang" type="submit" class="btn btn-default btn-sm" value="en">EN</button>
                                        <button name="lang" type="submit" class="btn btn-default btn-sm" value="ru">РУ</button>

                                    </div>
                                }
                            </div>


                            @Html.Partial("_LoginPartial")



                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2" style="color:dimgrey">
                        
                    </div>
                    <div class="col-md-2">
                        
                    </div>
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        @using (Html.BeginForm("Search", "Home"))
                        {
                            @Html.AntiForgeryToken()

                            <div class="input-group">
                                <input id="Request" name="Request" type="text" class="form-control" placeholder="@Resources.Resource.Searchfor">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                    </button>
                                </span>
                            </div>

                        }

                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
                @Scripts.Render("~/bundles/bootstrap")

                @RenderSection("scripts", required: false)
            </body>
            </html>
