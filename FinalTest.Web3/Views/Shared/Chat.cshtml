

<div><input type="text" id="name" /></div>
<div><input type="text" id="message" /></div>
<div><input type="button" id="send" value="Send" /></div>
<div id="chat"></div>




@section scripts
    {

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
            $(function () {
                var chat = $.connection.chatHub;

                chat.client.sendMessageToClient = function (name, message) {
                    // Add the message to the page.
                    $('#chat').append('<li><strong>' + name
                        + '</strong>: ' + message + '</li>');
                };

                $.connection.hub.start().done(function () {
                    $('#send').click(function () {
                        // Call the Send method on the hub.
                        chat.server.sendMessage($('#name').val(), $('#message').val());
                        // Clear text box and reset focus for next comment.
                        $('#message').val('').focus();
                    });
                });
            });
    </script>
}

